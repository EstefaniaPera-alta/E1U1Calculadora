package ejem.cal;
import ejem.cal.Cal;
import java.io.*;
import java.util.*;
public class Operaciones {
Scanner leer = new Scanner (System.in);
public void sumar() {
   int num1;
   int num2;
   int var=0;
   System.out.println("Ingresa un número");
   num1=leer.nextInt();
   System.out.println("Ingresa un segundo número");
   num2=leer.nextInt();
   System.out.println("La suma de: "+num1+" y "+num2+" es: "+(num1+num2));
}
public void resta(){
  Scanner lee = new Scanner (System.in);
  int num, num1;
  int var;
  do{
  System.out.println("Ingresa un número");
   num=lee.nextInt();
   System.out.println("Ingresa un número");
   num1=leer.nextInt();
   System.out.println("La resta es: "+(num-num1));
   System.out.println("1.Continuar \n2.Salir");
     var= lee.nextInt();
   }while(var<2);
}

 
public void divi(){
  int nume1,nume2;
  System.out.println("Ingresa un número divisor");
   nume1=leer.nextInt();
   System.out.println("Ingresa un número dividendo");
   nume2=leer.nextInt();
   System.out.println("El resultado de la división es: "+(nume2/nume1));
}
public void multi(){
  int nu, nu2;
  System.out.println("Ingresa un número");
   nu=leer.nextInt();
   System.out.println("Ingresa otro número");
   nu2=leer.nextInt();
   System.out.println("La respuesta de la multiplicación es: "+(nu*nu2));
}
}
